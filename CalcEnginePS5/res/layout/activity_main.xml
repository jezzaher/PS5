<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.AndroidGui.CalcEngine.MainActivity" >

    <Button
        android:id="@+id/Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="14dp"
        android:text="Calculate"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/NFuture_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Future_Value"
        android:layout_alignBottom="@+id/Future_Value"
        android:layout_alignRight="@+id/NAnnnual_Interest_Rate"
        android:layout_toRightOf="@+id/Future_Value"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Years"
        android:layout_alignTop="@+id/Years"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/Annual_Interest_Rate" />

    <EditText
        android:id="@+id/NAnnnual_Interest_Rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Annual_Interest_Rate"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_marginLeft="52dp"
        android:ems="8"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/Future_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Calculate"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="33dp"
        android:layout_marginLeft="14dp"
        android:ems="8"
        android:text="Future Value"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Annual_Interest_Rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Future_Value"
        android:layout_alignLeft="@+id/Future_Value"
        android:layout_marginBottom="18dp"
        android:ems="8"
        android:text="Annual Interest Rate"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Years"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Annual_Interest_Rate"
        android:layout_alignLeft="@+id/Investment_Amount"
        android:layout_marginBottom="24dp"
        android:ems="8"
        android:text="Years"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Investment_Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Years"
        android:layout_alignLeft="@+id/Annual_Interest_Rate"
        android:ems="8"
        android:text="Investment Amount"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/NInvestment_Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner1"
        android:layout_alignRight="@+id/spinner1"
        android:ems="8"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/Calculator_Engine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Investment_Amount"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="15dp"
        android:ems="10"
        android:text="Calculator Engine"
        android:textSize="22sp"
        android:textStyle="bold" >

        <requestFocus />
    </EditText>

</RelativeLayout>